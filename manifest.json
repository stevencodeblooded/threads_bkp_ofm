{
  "manifest_version": 3,
  "name": "Threads Repost Extension",
  "version": "1.0",
  "description": "Extract and repost threads from Threads.net",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://threads.net/*", "*://*.threads.net/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
